[nginx-http-auth]
enabled = true
port = http,https
filter = nginx-http-auth
logpath = /var/log/nginx/error.log
maxretry = {{ fail2ban_nginx_maxretry | default('3') }}
bantime = {{ fail2ban_nginx_bantime | default(fail2ban_bantime | default('3600')) }}
findtime = {{ fail2ban_findtime | default('600') }}
