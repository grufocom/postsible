[postfix-sasl]
enabled = true
port = smtp,submission,smtps
filter = postfix-sasl
logpath = /var/log/mail.log
maxretry = {{ fail2ban_postfix_maxretry | default('3') }}
bantime = {{ fail2ban_postfix_bantime | default(fail2ban_bantime | default('3600')) }}
findtime = {{ fail2ban_findtime | default('600') }}
