[sshd]
enabled = true
port = {{ ufw_ssh_port | default('22') }}
filter = sshd
logpath = /var/log/auth.log
maxretry = {{ fail2ban_ssh_maxretry | default('5') }}
bantime = {{ fail2ban_ssh_bantime | default(fail2ban_bantime | default('3600')) }}
findtime = {{ fail2ban_findtime | default('600') }}
