[rspamd]
enabled = true
port = http,https
filter = rspamd
logpath = /var/log/rspamd/rspamd.log
maxretry = {{ fail2ban_rspamd_maxretry | default('3') }}
bantime = {{ fail2ban_rspamd_bantime | default(fail2ban_bantime | default('3600')) }}
findtime = {{ fail2ban_findtime | default('600') }}
