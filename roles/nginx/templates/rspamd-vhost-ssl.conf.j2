# {{ ansible_managed }}
# Nginx VHost for Rspamd WebUI with SSL

# HTTP -> HTTPS redirect
server {
    listen {{ nginx_http_port }};
    listen [::]:{{ nginx_http_port }};
    server_name {{ certbot_domains | join(' ') }};

    # ACME challenge for certificate renewal
    location /.well-known/acme-challenge/ {
        root {{ certbot_webroot }};
    }

    # Redirect everything else to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS server
server {
    listen {{ nginx_https_port }} ssl;
    listen [::]:{{ nginx_https_port }} ssl;
    http2 on;
    
    server_name {{ certbot_domains[0] }};

    # Document root for default page
    root /var/www/html;
    index index.html index.htm;

    # SSL Configuration
    ssl_certificate {{ certbot_cert_path }}/{{ certbot_domains[0] }}/fullchain.pem;
    ssl_certificate_key {{ certbot_cert_path }}/{{ certbot_domains[0] }}/privkey.pem;
    ssl_protocols {{ nginx_ssl_protocols }};
    ssl_ciphers {{ nginx_ssl_ciphers }};
    ssl_prefer_server_ciphers {{ nginx_ssl_prefer_server_ciphers }};
    ssl_session_timeout {{ nginx_ssl_session_timeout }};
    ssl_session_cache {{ nginx_ssl_session_cache }};
    ssl_session_tickets {{ nginx_ssl_session_tickets }};

    # OCSP Stapling (optional, only if OCSP responder is available)
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    # Logging
    access_log /var/log/nginx/rspamd-access.log main;
    error_log /var/log/nginx/rspamd-error.log;

{% if nginx_security_headers_enabled %}
    # Security headers
    add_header Strict-Transport-Security "max-age={{ nginx_hsts_max_age }}; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
{% endif %}

    # Rspamd WebUI
    location /rspamd/ {
        proxy_pass http://127.0.0.1:{{ nginx_rspamd_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;

        # WebSocket support for Rspamd WebUI
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # SnappyMail webmail at /wm/
{% if snappymail_install_dir is defined %}
    location ^~ /wm/ {
        alias {{ snappymail_install_dir }}/;
        index index.php;

        # Try files, fallback to index.php
        try_files $uri $uri/ /wm/index.php?$query_string;

        # Security: Deny access to data directory
        location ~ ^/wm/data {
            deny all;
        }

        # PHP handling for SnappyMail
        location ~ ^/wm/(.+\.php)$ {
            alias {{ snappymail_install_dir }}/$1;
            
            fastcgi_pass unix:{{ nginx_php_fpm_socket }};
            fastcgi_index index.php;
            fastcgi_param SCRIPT_FILENAME $request_filename;
            include fastcgi_params;
            
            # PHP settings
            fastcgi_param PHP_VALUE "upload_max_filesize={{ snappymail_upload_max_size | default('50M') }}\npost_max_size={{ snappymail_post_max_size | default('50M') }}";
            fastcgi_read_timeout 300;
            fastcgi_send_timeout 300;
        }

        # Static files caching
        location ~* ^/wm/.+\.(jpg|jpeg|gif|png|ico|css|js|svg|woff|woff2|ttf|eot)$ {
            alias {{ snappymail_install_dir }}/;
            expires 30d;
            access_log off;
        }
    }
{% endif %}

    # Root location (serves /var/www/html/index.html)
    location / {
        try_files $uri $uri/ =404;
    }

    # Health check
    location /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
