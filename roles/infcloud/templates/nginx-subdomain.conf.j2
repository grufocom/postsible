# {{ ansible_managed }}
# InfCloud - Subdomain Configuration

server {
    listen 80;
    listen [::]:80;
    server_name {{ infcloud_subdomain }}.{{ infcloud_domain }};

    # Redirect to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
				http2 on;
    server_name {{ infcloud_subdomain }}.{{ infcloud_domain }};

    # SSL Configuration
{% if infcloud_ssl_cert is file %}
    ssl_certificate {{ infcloud_ssl_cert }};
    ssl_certificate_key {{ infcloud_ssl_key }};
{% else %}
    # Fallback to snakeoil (will be replaced by certbot)
    ssl_certificate /etc/ssl/certs/ssl-cert-snakeoil.pem;
    ssl_certificate_key /etc/ssl/private/ssl-cert-snakeoil.key;
{% endif %}

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Logging
    access_log /var/log/nginx/infcloud-access.log;
    error_log /var/log/nginx/infcloud-error.log;

    # Root directory
    root {{ infcloud_install_path }};
    index index.html;

    # Default location
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache static files
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Deny access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }
}
