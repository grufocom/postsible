# HTTP configuration for autoconfig.{{ item }} - Used for certbot challenges
server {
    listen 80;
    listen [::]:80;
    server_name autoconfig.{{ item }};

    # Logging
    access_log /var/log/nginx/autoconfig-{{ item }}-http-access.log;
    error_log /var/log/nginx/autoconfig-{{ item }}-http-error.log;

    # Let's Encrypt ACME challenge
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
        default_type "text/plain";
        try_files $uri =404;
    }

    # Serve autoconfig files even over HTTP (fallback for some clients)
    location /mail/config-v1.1.xml {
        root /var/www/autoconfig/{{ item }};
        default_type "application/xml";
        add_header Access-Control-Allow-Origin "*";
    }

    location /.well-known/autoconfig/mail/ {
        root /var/www/autoconfig/{{ item }};
        default_type "application/xml";
        add_header Access-Control-Allow-Origin "*";
    }

    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}
