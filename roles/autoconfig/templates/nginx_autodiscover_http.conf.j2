# HTTP configuration for autodiscover.{{ item }} - Used for certbot challenges
server {
    listen 80;
    listen [::]:80;
    server_name autodiscover.{{ item }};

    # Logging
    access_log /var/log/nginx/autodiscover-{{ item }}-http-access.log;
    error_log /var/log/nginx/autodiscover-{{ item }}-http-error.log;

    # Let's Encrypt ACME challenge
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
        default_type "text/plain";
        try_files $uri =404;
    }

    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}
