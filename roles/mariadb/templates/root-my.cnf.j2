# roles/mariadb/templates/root-my.cnf.j2
# {{ ansible_managed }}
# MariaDB client configuration for root user

[client]
user=root
password={{ mariadb_root_password }}
socket=/var/run/mysqld/mysqld.sock

[mysql]
user=root
password={{ mariadb_root_password }}

[mysqldump]
user=root
password={{ mariadb_root_password }}

[mysqladmin]
user=root
password={{ mariadb_root_password }}
